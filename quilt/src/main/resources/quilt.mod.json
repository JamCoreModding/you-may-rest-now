{
  "schema_version": 1,
  "mixin": [
    "you_may_rest_now.mixins.json"
  ],
  "quilt_loader": {
    "group": "io.github.jamalam360",
    "id": "you_may_rest_now",
    "version": "${version}",
    "metadata": {
      "name": "You May Rest Now",
      "description": "Allows you to sleep if no monsters can pathfind to you",
      "contributors": {
        "Jamalam": "Owner"
      },
      "contact": {
        "sources": "https://github.com/JamCoreModding/you-may-rest-now"
      },
      "icon": "assets/you_may_rest_now/icon.png"
    },
    "intermediate_mappings": "net.fabricmc:intermediary",
    "entrypoints": {
      "init": ["io.github.jamalam360.you_may_rest_now.quilt.YouMayRestNowQuilt"]
    },
    "depends": [
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=${minecraft_version}"
      },
      {
        "id": "architectury",
        "version": ">=${architectury_version}"
      },
      {
        "id": "jamlib",
        "version": ">=${jamlib_version}"
      }
    ]
  },
  "minecraft": {
    "environment": "*"
  }
}
